.enterPunchCardDetail .header{
	height: 132rpx;
	/*line-height: 132rpx;*/
	padding-left: 30rpx;
	display: flex;
	/*justify-content: center;*/
	align-items: center;
	position: relative;	
}
.enterPunchCardDetail .header image{
	width:90rpx;
	height:90rpx;
	border-radius: 5rpx;
	float: left;
}
.enterPunchCardDetail .header .content{
	float;left;
	display: flex;
	flex-direction: column;
}
.enterPunchCardDetail .header .contentRight{
	display: flex;
	flex-direction: column;
}
.enterPunchCardDetail .header .content>text{
	font-family: 'PingFangSC-Medium';
	font-size:32rpx;
}
.enterPunchCardDetail .header .content text:last-child{
	font-family: 'PingFangSC-Regular';
	font-size:24rpx;
}
.enterPunchCardDetail .header .contentRight>text{
	font-family: 'PingFangSC-Medium';
	font-size:32rpx;
}
.enterPunchCardDetail .header .contentRight text:last-child{
	font-family: 'PingFangSC-Regular';
	font-size:24rpx;
}
.enterPunchCardDetail .rule{
	padding-left: 30rpx;
	line-height: 87rpx;
	height: 87rpx;
	display: flex;
	align-items: center;
}
.enterPunchCardDetail .rule>text{
	font-family: 'PingFangSC-Medium';
	font-size: 28rpx;
	margin-right: 18rpx;
}
.enterPunchCardDetail .rule text:last-child{
	font-size: 28rpx;
	font-family: 'PingFangSC-Regular';
}
.enterPunchCardDetail .minePunchCard{
	height: 375rpx;
}
.enterPunchCardDetail .minePunchCard .header{
	position: relative;
}
.enterPunchCardDetail .minePunchCard .header image{
	width:90rpx;
	height:90rpx;
}
.enterPunchCardDetail .minePunchCard .content{
	display: flex;
	align-items: center;
	justify-content: center;
}
.enterPunchCardDetail .sort .nav{
	width:100%;
	height:90rpx;
	display:flex;
	flex-direction:row;
	font-family: "PingFangSC";
	font-size: 32rpx;
}
.enterPunchCardDetail .sort .default{
	line-height:90rpx;
	text-align:center;
	flex:1;
	/*border-right:1px solid gainsboro;*/
	border-bottom: 1rpx solid white;
	color:#aaa9ae;
	/*font-weight:bold;*/
	font-size:28rpx;
	/*width: 180rpx;*/
}
.enterPunchCardDetail .sort .checked{
	line-height:90rpx;
	text-align:center;
	color:#00c6ae;
	flex:1;
	border-bottom: 1rpx solid #00c6ae;
	/*border-right:1px solid gainsboro;*/
	/*font-weight:bold;*/
	font-size:28rpx;
	/*width: 180rpx;*/
}
.enterPunchCardDetail .sort .show{
	display:block;
	text-align:center;
	/*line-height:200rpx;*/
}
.enterPunchCardDetail .sort .hidden{
	display:none;
	text-align:center;
	/*line-height:200rpx;*/
}
.enterPunchCardDetail .thumbs{
	margin-left: 30rpx;
	padding-left: 30rpx;
	margin-right: 30rpx;
	background-color: #f5f5f5;
}
.enterPunchCardDetail .thumbs .thumbsUp{
	display: flex;
	align-items: center;
	border-bottom:1rpx solid #e5e5e5;
}
.enterPunchCardDetail .thumbs .comment{
	padding-left: 29rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
	display: flex;
	border-bottom:1rpx solid #e5e5e5;
	padding-bottom:30rpx;
	margin-bottom:30rpx;
}
.enterPunchCardDetail .thumbs .comment:last-child{
	border-bottom: 0;
}
.enterPunchCardDetail .thumbs .comment .name{
	font-size: 24rpx;
	font-family: "PingFangSC-Medium";
	color: #4b69a8;
}
.enterPunchCardDetail .thumbs .comment .content{
	font-size: 24rpx;
	font-family: "PingFangSC-Medium";
}
.enterPunchCardDetail .punchCardDetail .enterPunchCard{
	background-color: #f3f5f9;
	padding-left: 30rpx;
	padding-right: 30rpx;
	padding-bottom: 30rpx;
	padding-top: 60rpx;
}
.enterPunchCardDetail .punchCardDetail .enterPunchCard button{
	color: white;
	background-color: #00c6ae;
}
.enterPunchCardDetail .punchCardDetail .enterPunchCard button::after{
	border-radius: 5rpx;
	border:0;
}